[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    htmlcov,
    .coverage,
    coverage.xml,
    area_cache,
    .github
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (sometimes needed for __init__.py)
per-file-ignores =
    __init__.py:F401
    tests/*:S101  # assert allowed in tests
max-complexity = 10
select = E,W,F,C